    <% for (let i = 0; i < 5; i++) { %>
    <div>배고팡ㅠㅠ</div>
    <% } %> <% for (let btn of btns) {%>
    <button type="button" class="btn btn-primary">버튼 <%= btn %></button>
    <% } %>

    <br />
    <span><%= me.name%></span>
    <span><%= me.msg%></span>

    <br />
    <% if (!isLogin) { %>
    <h4>아직 로그인을 하셨군요!</h4>
    <% } else { %>
    <h4>로그인을 하지 않으셨군요!</h4>
    <% } %>
  </body>
</html>
